<div class="column is-one-third-desktop is-half-tablet is-half-mobile">    
  <a href="<%= item_path(item.id) %>" data-featherlight="iframe" data-featherlight-iframe-height="545px" data-featherlight-iframe-width="500" data-featherlight-after-close="$(function(){ if($('div.search').length == 0){ $('div.recommendations').load(location.href + ' div.recommendations')} else{ window.location.href='<%= item_index_path %>' }});">

    <% if item.image != nil %>    
      <img src="<%= item.image %>" height="180" width="130" />
    <% else %>
      <img src="<%= image_url('default-image.png') %>" height="180" width="130" />
    <% end %>

    <p class="item is-5 is-size-4-touch"><%= item.title %></p>

  </a>
</div>
