<h2 class="is-size-1-touch devise-title">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, class: "is-size-2-touch" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "is-size-2-touch" %>
  </div>
  <br/>
  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: "is-size-3-touch" %>
  </div>
<% end %>
<br/>
<%= render "devise/shared/links" %>
