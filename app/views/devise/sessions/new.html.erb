<h2 class="is-size-1-touch devise-title">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, class: "is-size-2-touch" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "is-size-2-touch" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "is-size-2-touch" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "is-size-2-touch" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class: "is-size-2-touch" %>
    </div>
  <% end %>
  <br/>
  <div class="actions">
    <%= f.submit "Log in", class: "is-size-2-touch" %>
  </div>
<% end %>
<br/>
<%= render "devise/shared/links" %>
