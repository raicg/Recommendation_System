<h2 class="is-size-1-touch devise-title">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name, class: "is-size-2-touch" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "is-size-3-touch" %>
  </div>
  
  <div class="field">
    <%= f.label :email, class: "is-size-2-touch" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "is-size-3-touch" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "is-size-2-touch" %>
    <% if @minimum_password_length %>
    <em class="is-size-3-touch">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "is-size-2-touch" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: "is-size-2-touch" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "is-size-2-touch" %>
  </div>

  <br/>

  <div class="actions">
    <%= f.submit "Sign up", class: "is-size-2-touch" %>
  </div>
<% end %>
<br/>
<%= render "devise/shared/links" %>
